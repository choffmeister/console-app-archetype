#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<assembly>
  <id>bundle</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${symbol_dollar}{project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README.md</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${symbol_dollar}{project.build.directory}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>${artifactId}-${symbol_dollar}{project.version}-app.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
